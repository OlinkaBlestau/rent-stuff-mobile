<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3DBDA"
    tools:context=".CreateShopActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/rubik_light"
        android:text="@string/create_shop_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />


    <Button
        android:id="@+id/button"
        android:layout_width="145dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#C7B9B7"
        android:fontFamily="@font/rubik_light"
        android:onClick="registration"
        android:text="@string/create_shop_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="300dp"
        android:layout_height="94dp"
        android:layout_marginTop="15dp"
        android:background="#F2F0F5"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="@string/create_shop_description"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword3"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTextPassword3"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="#F2F0F5"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="@string/create_shop_latitude"
        android:padding="5dp"

        android:paddingStart="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="#F2F0F5"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="@string/create_shop_longitude"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextShopEmail"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="#F2F0F5"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="@string/create_shop_email"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextShopPhone"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextShopPhone"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="#F2F0F5"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="@string/create_shop_phone"
        android:inputType="phone"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextShopName"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextShopName"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="#F2F0F5"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="@string/create_shop_name"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextShopAddress"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"

        android:background="#F2F0F5"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="@string/create_shop_address"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextShopEmail"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>